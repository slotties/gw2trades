#parse("/pager.vm")

<table class="table table-striped table-bordered table-hover">
    <tr>
        <td>&nbsp;</th>
        <th colspan="2">Buy</th>
        <th colspan="2">Sell</th>
    </tr>
    <tr>
        <th>Item</th>
        <th>Highest bidder</th>
        <th>Average price</th>
        <th>Lowest seller</th>
        <th>Average price</th>
    </tr>
#foreach($stats in $listingStatistics)
    <tr>
        <td>${stats.itemId}</td>
        <td>${stats.buyStatistics.maxPrice}</td>
        <td>${stats.buyStatistics.average}</td>
        <td>${stats.sellStatistics.minPrice}</td>
        <td>${stats.sellStatistics.average}</td>
    </tr>
#end
</table>

